<style>
    /* Estilos para el elemento con el id "seccion1" */
    #seccion1 {
        background-color: #2bbff0057;
        color: #c2d41a;
        padding: 20px;
        margin-bottom: 20px;
    }

    .seccion2 {
        background-color: #ffc107;
        color: #333;
        padding: 20px;
        margin-bottom: 20px;
    }

    .seccion2 .seccion3 {
        background-color: #28a745;
        color: #fff;
    }
</style>
